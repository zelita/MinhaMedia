<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="es.hol.kaiksales.minhamedia.Calculo"
    android:background="#ebead1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bb"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Ciências da Natureza e suas Tecnologias"
        android:textColor="#000000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/n1"
        android:layout_alignTop="@+id/bb"
        android:layout_alignStart="@+id/n2"
        android:textColor="#fa6fde" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bb2"
        android:text="Ciências Humanas e suas Tecnologias"
        android:textColor="#000000"
        android:layout_below="@+id/n1"
        android:layout_alignStart="@+id/bb" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/n2"
        android:layout_below="@+id/bb2"
        android:layout_centerHorizontal="true"
        android:textColor="#fa6fde" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bb3"
        android:text="Linguagens, Códigos e suas Tecnologias"
        android:layout_below="@+id/n2"
        android:layout_alignEnd="@+id/bb"
        android:textColor="#000000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/n3"
        android:layout_below="@+id/bb3"
        android:layout_alignStart="@+id/n2"
        android:textColor="#fa6fde" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bb4"
        android:text="Matemática e suas Tecnologias"
        android:layout_below="@+id/n3"
        android:layout_alignStart="@+id/n4"
        android:textColor="#000000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/n4"
        android:layout_below="@+id/bb4"
        android:layout_centerHorizontal="true"
        android:textColor="#fa6fde" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bb5"
        android:text="Redação"
        android:layout_below="@+id/n4"
        android:layout_centerHorizontal="true"
        android:textColor="#000000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/n5"
        android:textColor="#fa6fde"
        android:layout_below="@+id/bb5"
        android:layout_alignStart="@+id/n4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:id="@+id/cm"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/n5"
        android:layout_alignStart="@+id/n5"
        android:textColor="#000000"
        android:background="#fa6fde" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:id="@+id/voltar"
        android:layout_alignTop="@+id/cm"
        android:layout_alignEnd="@+id/bb"
        android:background="#fa6fde" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Média:"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/cm"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Resultado"
        android:id="@+id/resu"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/bb2"
        android:textColor="#fa6fde"
        android:textSize="20dp" />
</RelativeLayout>

