<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="es.hol.kaiksales.minhamedia.Peso"
    android:background="#ebead1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C.N.T"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peso"
        android:id="@+id/textView3"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/p1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/m1"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/p1"
        android:width="100dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C.H.T"
        android:id="@+id/textView4"
        android:textSize="20dp"
        android:layout_below="@+id/m1"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/m2"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peso"
        android:id="@+id/textView5"
        android:textSize="20dp"
        android:layout_below="@+id/m1"
        android:layout_alignStart="@+id/p2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/p2"
        android:width="100dp"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/p1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L.C.T"
        android:id="@+id/textView6"
        android:textSize="20dp"
        android:layout_below="@+id/m2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/m3"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peso"
        android:id="@+id/textView7"
        android:textSize="20dp"
        android:layout_above="@+id/m3"
        android:layout_alignStart="@+id/p2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/p3"
        android:width="100dp"
        android:layout_alignTop="@+id/m3"
        android:layout_alignEnd="@+id/p2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M.T"
        android:id="@+id/textView8"
        android:textSize="20dp"
        android:layout_below="@+id/m3"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/m4"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peso"
        android:id="@+id/textView9"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView7" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/p4"
        android:width="100dp"
        android:layout_alignTop="@+id/m4"
        android:layout_alignEnd="@+id/p2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Redação"
        android:id="@+id/textView10"
        android:textSize="20dp"
        android:layout_below="@+id/m4"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/m5"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peso"
        android:id="@+id/textView11"
        android:textSize="20dp"
        android:layout_above="@+id/m5"
        android:layout_alignStart="@+id/textView9" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/p5"
        android:width="100dp"
        android:layout_below="@+id/textView11"
        android:layout_alignEnd="@+id/p2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:id="@+id/cm"
        android:layout_below="@+id/m5"
        android:layout_toEndOf="@+id/textView8"
        android:background="#fa6fde" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:id="@+id/voltar"
        android:layout_alignBottom="@+id/cm"
        android:layout_alignEnd="@+id/textView11"
        android:background="#fa6fde" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Média:"
        android:id="@+id/textView12"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Resultado"
        android:id="@+id/resu"
        android:textColor="#fa6fde"
        android:textSize="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/voltar" />
</RelativeLayout>
